{
    "push": {
      "name": "weaving-the-web/devobs-development",
      "vcs": true
    },
    "variables": {
        "atlas_application_version": "{{env `ATLAS_BUILD_CONFIGURATION_VERSION`}}",
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}",
    },
    "provisioners": [
        {
            "type": "shell",
            "scripts": [
                "provisioning/packaging/scripts/base.sh",
                "provisioning/packaging/scripts/virtualbox.sh",
                "provisioning/packaging/scripts/vmware.sh",
                "provisioning/packaging/scripts/vagrant.sh",
                "provisioning/packaging/scripts/dep.sh",
                "provisioning/packaging/scripts/fix-no-tty.sh",
                "provisioning/packaging/scripts/ensure-required-files-exist.sh",
                "provisioning/packaging/scripts/cleanup.sh",
                "provisioning/packaging/scripts/zerodisk.sh"
            ],
            "override": {
                "virtualbox-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                },
                "vmware-iso": {
                    "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'"
                }
            }
        }, {
            "extra_arguments": ["--limit=all"],
            "group_vars": "provisioning/group_vars",
            "inventory_file": "provisioning/inventories/dev",
            "playbook_file": "provisioning/playbook.yml",
            "playbook_dir":  "provisioning",
            "role_paths": ["provisioning/roles"],
            "type": "ansible-local"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "headless": true,
            "boot_wait": "10s",
            "disk_size": 20480,
            "guest_os_type": "Ubuntu_64",
            "http_directory": "provisioning/packaging/http",
            "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
            "iso_checksum_type": "sha256",
            "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version"
        },
        {
            "type": "vmware-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "boot_wait": "10s",
            "disk_size": 20480,
            "guest_os_type": "Ubuntu-64",
            "headless": true,
            "http_directory": "provisioning/packaging/http",
            "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
            "iso_checksum_type": "sha256",
            "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
            "skip_compaction": true,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
            "tools_upload_flavor": "linux"
        }
    ],
    "post-processors": [
        [
            {
                "type": "vagrant",
                "keep_input_artifact": false
            },
            {
                "type": "atlas",
                "only": ["vmware-iso"],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "vmware_desktop",
                    "version": "0.0.{{user `atlas_application_version`}}"
                }
            },
            {
                "type": "atlas",
                "only": ["virtualbox-iso"],
                "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
                "artifact_type": "vagrant.box",
                "metadata": {
                    "provider": "virtualbox",
                    "version": "0.0.{{user `atlas_application_version`}}"
                }
            }
        ]
    ]
}
