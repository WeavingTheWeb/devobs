{% extends "::base.html.twig" %}

{% block title %}Body of message #{{ message_id }}{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-xs-6">
                <div class="form-group">
                    <label for="message">Body</label>
                    <textarea id="message" class="form-control" name="message" rows="35">{{ message|raw }}</textarea>
                </div>
            </div>

        </div>

    </div>

{% endblock %}