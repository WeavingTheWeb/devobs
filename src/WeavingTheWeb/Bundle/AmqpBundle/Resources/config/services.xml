<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="weaving_the_web_amqp.produce_user_friendlist_command.class">WeavingTheWeb\Bundle\AmqpBundle\Command\ProduceUserFriendlistCommand</parameter>
        <parameter key="weaving_the_web_amqp.produce_lists_members_command.class">WeavingTheWeb\Bundle\AmqpBundle\Command\ProduceListsMembersCommand</parameter>
        <parameter key="weaving_the_web_amqp.twitter.user_status.class">WeavingTheWeb\Bundle\AmqpBundle\Twitter\UserStatus</parameter>
    </parameters>

    <services>
        <service id="weaving_the_web_amqp.twitter.user_status" class="%weaving_the_web_amqp.twitter.user_status.class%">
            <call method="setSerializer">
                <argument type="service" id="weaving_the_web_twitter.serializer.user_status" />
            </call>
            <call method="setLogger">
                <argument type="service" id="monolog.logger.status" />
            </call>
            <call method="setUserRepository">
                <argument type="service" id="user_manager" />
            </call>
        </service>
        <service id="weaving_the_web_amqp.twitter" class="%weaving_the_web_amqp.twitter.user_status.class%">
            <call method="setSerializer">
                <argument type="service" id="weaving_the_web_twitter.serializer.user_status" />
            </call>
            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
        </service>
        <service id="weaving_the_web_amqp.twitter" class="%weaving_the_web_amqp.twitter.user_status.class%">
            <call method="setSerializer">
                <argument type="service" id="weaving_the_web_twitter.serializer.user_status" />
            </call>
            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
        </service>
        <service id="weaving_the_web_amqp.twitter.lists_member_status"
                 class="%weaving_the_web_amqp.produce_lists_members_command.class%">
            <call method="setSerializer">
                <argument type="service" id="weaving_the_web_twitter.serializer.user_status" />
            </call>
        </service>
        <service id="weaving_the_web_amqp.twitter.lists_member_status"
                 class="%weaving_the_web_amqp.produce_lists_members_command.class%">
            <call method="setSerializer">
                <argument type="service" id="weaving_the_web_twitter.serializer.user_status" />
            </call>
        </service>
    </services>
</container>
